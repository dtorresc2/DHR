            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/parrafo4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Blanco"
                android:text="@string/parrafo4" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/parrafo5"
