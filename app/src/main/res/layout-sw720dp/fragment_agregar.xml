<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoTerciario"
    tools:context=".OpcionIngreso.Agregar">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/fnueva"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:elevation="10dp"
            android:background="@drawable/boton"
            android:drawableTop="@drawable/ic_agregar64"
            android:padding="20dp"
            android:text="Ficha Nueva"
            android:textSize="28sp" />

        <Button
            android:id="@+id/fenueva"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:elevation="10dp"
            android:background="@drawable/boton"
            android:drawableTop="@drawable/ic_estrella64"
            android:padding="20dp"
            android:text="Ficha Especial Nueva"
            android:textSize="28sp" />
    </LinearLayout>

</FrameLayout>