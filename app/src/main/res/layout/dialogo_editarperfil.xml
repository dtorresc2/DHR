<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/FondoTerciario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/FondoTerciario"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloDialogoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:background="@color/AzulOscuro"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/Blanco"
            android:textSize="24sp"/>

        <CheckBox
            android:id="@+id/checkFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Foto de Perfil"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:id="@+id/checkNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de Perfil"
            android:layout_marginTop="10dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Nombre del Perfil"
            app:counterEnabled="true"
            app:counterMaxLength="40">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/nombrePerfilAux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:enabled="false"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imagenPerfilAux"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logonuevo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/botonGaleria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Galeria"
                android:clickable="false"
                android:drawableLeft="@drawable/ic_galeria"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="0.2"/>

            <Button
                android:id="@+id/botonCamara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Camara"
                android:clickable="false"
                android:drawableLeft="@drawable/ic_cam"
                android:paddingLeft="15dp"
                android:background="@color/AzulOscuro"/>


        </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/botonAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Aceptar"
                android:textSize="18sp"
                android:background="@color/AzulOscuro"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <Button
                android:id="@+id/botonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Cancelar"
                android:textSize="18sp"
                android:background="@color/AzulOscuro"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>