<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoSecundario"
    tools:context=".Rutas.Fichas.FichaEspecial.Evaluacion">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/siguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="65dp"
        android:clickable="true"
        android:elevation="10dp"
        android:src="@drawable/ic_check"
        app:backgroundTint="@color/AzulOscuro"
        tools:ignore="SpeakableTextPresentCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Alineacion Dental"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/ad1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Buena Alineacion Dental"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/ad2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Api침amiento en Maxiliar"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/ad3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Api침amiento en la Mandibula"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/ad4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Linea Media Correcta"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/ad5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Discrepancia de Linea Media "
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/titulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Forma del Arco Superior"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/fas1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Normal" />

                <RadioButton
                    android:id="@+id/fas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Estrecha" />

                <RadioButton
                    android:id="@+id/fas3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Aplanado" />
            </RadioGroup>

            <TextView
                android:id="@+id/titulo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Forma del Arco Inferior"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/fai1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Normal" />

                <RadioButton
                    android:id="@+id/fai2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Estrecha" />

                <RadioButton
                    android:id="@+id/fai3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Aplanado" />
            </RadioGroup>

            <TextView
                android:id="@+id/titulo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Oclucion"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/oc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Relacion Correcta de Mordida"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/oc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sobre Mordida"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/oc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resalte Dental"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/oc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linea Media Correcta"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/oc5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discrepancia de Linea Media"
                tools:ignore="TouchTargetSizeCheck" />


            <TextView
                android:id="@+id/titulo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Desarrollo Facial"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/df1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Desarrollo Facial Bueno"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/df2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deficiencia en el Tercio Medio de la Cara"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/df3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deficiencia en el Tercio Inferior de la Cara"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/df4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crecimiento Vertical Excesivo"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/titulo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Respiracion y Postura"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="4dp"
                android:text="Respiracion Nasal:"
                android:textColor="@color/Blanco" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:checked="true"
                    android:text="Leve" />

                <RadioButton
                    android:id="@+id/rp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:checked="false"
                    android:text="Fuerte" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/rp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respiracion Bucal"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="4dp"
                android:text="Estado de Postura:"
                android:textColor="@color/Blanco" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:checked="true"
                    android:text="Correcta" />

                <RadioButton
                    android:id="@+id/rp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:checked="false"
                    android:text="Incorrecta" />
            </RadioGroup>

            <TextView
                android:id="@+id/titulo7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Lengua"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="4dp"
                android:text="Posici칩n de Lengua:"
                android:textColor="@color/Blanco" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/len1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:checked="true"
                    android:text="Correcta" />

                <RadioButton
                    android:id="@+id/len2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:checked="false"
                    android:text="Incorrecta" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/len3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insercion el Frenillo Lingual"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/titulo8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Deglucion"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="4dp"
                android:text="Posici칩n de Lengua:"
                android:textColor="@color/Blanco" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/de1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Correcta" />

                <RadioButton
                    android:id="@+id/de2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Incorrecta" />
            </RadioGroup>

            <TextView
                android:id="@+id/titulo9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Labios y Mejillas"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="4dp"
                android:text="Postura de Labios en Reposo:"
                android:textColor="@color/Blanco" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/lm1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Correcta" />

                <RadioButton
                    android:id="@+id/lm2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Incorrecta" />
            </RadioGroup>

            <TextView
                android:id="@+id/titulo10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Habitos"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bruxismo"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Succion de Dedos"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chupete"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/h4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biberon"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ronca"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/titulo11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="TMJ"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/tmj1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Temporal"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/tmj2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pterigoideo"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/tmj3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maseteros"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/tmj4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cervical Posterior"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/tmj5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trapecio"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/tmj6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TMJ Click"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/tmj7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TMJ Dolor"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/titulo12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/AzulOscuro"
                android:gravity="center_horizontal|center_vertical"
                android:padding="4dp"
                android:text="Otros"
                android:textColor="@color/Blanco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otrosEvaluacionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:counterEnabled="true"
                app:counterMaxLength="60"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otrosEvaluacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Otros"
                    android:inputType="text"
                    android:maxLength="60"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>