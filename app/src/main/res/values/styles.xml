<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/AzulOscuro</item>
        <item name="colorAccent">@color/Blanco</item>
    </style>
    
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/Blanco</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/Blanco</item>
        <item name="colorControlNormal">@color/Blanco</item>
        <item name="colorControlActivated">@color/Blanco</item>
    </style>

    <style name="SizeHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="fondoetiqueta">
        <item name ="android:background">@drawable/etiqueta_menu</item>
        <item name ="android:textColor">#ffff</item>
    </style>

    <style name="progressDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/FondoTerciario</item>
        <item name="android:textColorPrimary">@color/Blanco</item>
        <item name="android:background">@color/AzulOscuro</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/red</item>
    </style> -->

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/AzulOscuro</item>
        <item name="colorAccent">@color/Blanco</item>
        <item name="colorPrimary">@color/AzulOscuro</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/Blanco</item>
        <item name="actionMenuTextColor">@color/Blanco</item>

        <item name="colorControlNormal">@color/Blanco</item>
        <item name="colorControlActivated">@color/Blanco</item>
        <item name="android:textColorHint">@color/Blanco</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Rojo</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
